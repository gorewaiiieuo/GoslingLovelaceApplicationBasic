<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guohuayu.com.goslinglovelaceapplicationbasic.MainActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/textJG"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:srcCompat="@drawable/jg" />

    <TextView
        android:id="@+id/tv_abstrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_toEndOf="@+id/iv_person"
        android:layout_toRightOf="@+id/iv_person"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:text="@string/textAbstratJG"
        android:textSize="20dp" />


</RelativeLayout>
